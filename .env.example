# FHEVM Example Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============== NETWORK RPC ENDPOINTS ==============

# Sepolia Testnet
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Ethereum Mainnet (if needed for mainnet testing)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Local Hardhat Node
HARDHAT_RPC_URL=http://127.0.0.1:8545

# Custom Network (if applicable)
CUSTOM_RPC_URL=https://your-custom-network-rpc.com

# ============== PRIVATE KEYS ==============

# WARNING: NEVER share private keys!
# Use a key with NO real funds for testing
PRIVATE_KEY=your_private_key_without_0x_prefix

# Alternative: Use environment variable only for testing
# MNEMONIC=word1 word2 word3 ... word12

# ============== TESTING & REPORTING ==============

# Enable gas reporting during tests
REPORT_GAS=true

# CoinMarketCap API Key for USD gas cost estimation
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ============== CONTRACT VERIFICATION ==============

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Enable contract verification on deployment
VERIFY_CONTRACTS=false

# ============== FHEVM CONFIGURATION ==============

# FHEVM Gateway URL (for testnet)
FHEVM_GATEWAY_URL=https://gateway.zama.ai

# Enable encrypted operation tests
ENABLE_FHEVM_TESTS=true

# ============== DEVELOPMENT FLAGS ==============

# Enable verbose logging
VERBOSE=false

# Enable debug mode
DEBUG=false

# Skip compilation
SKIP_COMPILE=false

# ============== DEPLOYMENT SETTINGS ==============

# Gas price (in gwei) - leave empty to use default
GAS_PRICE=20

# Gas limit multiplier (1.0 = normal)
GAS_LIMIT_MULTIPLIER=1.2

# ============== ACCOUNT CONFIGURATION ==============

# Account index to use (for multi-account scenarios)
ACCOUNT_INDEX=0

# Number of accounts to generate (for testing)
NUM_ACCOUNTS=10

# ============== SECURITY ==============

# API Keys (with restricted permissions)
# Keep these separate from main private keys
API_KEY_TESTING=testing_key_only

# ============== CUSTOM VARIABLES ==============

# Your custom configuration below
# Example:
MY_CUSTOM_VAR=custom_value

# ============== IMPORTANT NOTES ==============

# 1. NEVER commit .env to git
# 2. Add .env to .gitignore
# 3. Use different keys for different networks
# 4. Rotate keys regularly
# 5. Use hardware wallets for mainnet
# 6. Restrict API key permissions
# 7. Use separate key for each environment
#    - Development: Test key with no funds
#    - Staging: Limited funds key
#    - Production: Hardware wallet only

# ============== USAGE EXAMPLES ==============

